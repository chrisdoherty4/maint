{
  "name": "maint-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:less": "lessc less/panel.less ../custom_components/maint/frontend/panel.css",
    "watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc --noEmit",
    "lint": "npm run lint:ts && npm run lint:less",
    "lint:ts": "eslint src --ext .ts",
    "lint:less": "stylelint \"less/**/*.less\"",
    "format": "prettier --check \"src/**/*.{ts,json}\"",
    "format:write": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@open-wc/testing": "^4.0.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.27.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.13.1",
    "jsdom": "^27.2.0",
    "less": "^4.4.2",
    "prettier": "^3.3.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-less": "^3.0.1",
    "stylelint-less": "^3.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.1",
    "vitest": "^4.0.15"
  }
}
